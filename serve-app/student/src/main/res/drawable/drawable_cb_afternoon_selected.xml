<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners android:radius="@dimen/size_10dp" />

            <stroke
                android:width="1.5dp"
                android:color="#FF6853" />
            <gradient
                android:angle="90"
                android:endColor="#FFE9E1"
                android:startColor="#FCD8CA"
                android:type="linear" />

        </shape>
    </item>

    <item
        android:gravity="end"
        android:top="@dimen/size_10dp"
        android:right="@dimen/size_10dp"
        android:drawable="@drawable/ic_checked_red" android:width="@dimen/size_22dp" android:height="@dimen/size_22dp"/>

</layer-list>