<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/size_80dp"
        android:height="@dimen/size_5dp"
        android:gravity="center">

        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="@dimen/size_24dp"
                android:topRightRadius="@dimen/size_24dp" />
            <gradient
                android:angle="90"
                android:endColor="#FF7A2D"
                android:startColor="#FFA554"
                android:type="linear" />
            <corners
                android:topLeftRadius="2dp"
                android:topRightRadius="2dp" />
            <size
                android:width="16dp"
                android:height="2dp" />
        </shape>
    </item>
</layer-list>