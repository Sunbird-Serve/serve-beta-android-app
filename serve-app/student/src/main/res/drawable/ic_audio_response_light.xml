<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="@dimen/size_200dp"
        android:height="@dimen/size_150dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_17dp" />
            <solid android:color="#F3F7FC" />
            <stroke
                android:width="@dimen/size_1dp"
                android:color="#DEE1E4" />
        </shape>
