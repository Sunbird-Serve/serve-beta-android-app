<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_223dp"
    android:background="@color/doubt_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/size_30dp">

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.13" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.39"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_1dp"
                android:layout_weight="0.29"
                android:background="@drawable/ic_asked_doubt_gray_bg"
                android:elevation="@dimen/size_1dp"
                android:outlineProvider="background"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_doubt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_1dp"
                        android:background="@drawable/ic_asked_doubt_white_bg"
                        android:elevation="@dimen/size_1dp"
                        android:outlineProvider="background"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/iv_doubt_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="@dimen/size_1dp"
                        android:maxWidth="@dimen/size_26dp"
                        android:maxHeight="@dimen/size_26dp"
                        android:paddingTop="@dimen/size_18dp"
                        android:src="@drawable/ic_audio_light"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_doubt_type"
                        style="@style/Theme.Text.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="@dimen/size_1dp"
                        android:gravity="center"
                        android:paddingTop="@dimen/size_10dp"
                        android:textAppearance="@style/TextAppearance.Caption"
                        android:textColor="#828C99"
                        android:visibility="gone" />

                </LinearLayout>
            </FrameLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/size_88dp"
                android:layout_weight="0.07" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.64"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_subtopic"
                    style="@style/Theme.Text.SecondaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="@style/TextAppearance.Overline"
                    android:textColor="@color/golden" />

                <TextView
                    android:id="@+id/tv_topic"
                    style="@style/Theme.Text.SecondaryColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="2"
                    android:textAppearance="@style/TextAppearance.Body2" />

                <TextView
                    android:id="@+id/tv_date"
                    style="@style/Theme.Text.SecondaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:lines="1"
                    android:textAlignment="gravity"
                    android:textAppearance="@style/TextAppearance.Caption"
                    android:textColor="@color/colorOnSecondary_60opc" />

            </LinearLayout>
        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/size_15dp"
            android:layout_weight="0.13" />

        <Button
            android:id="@+id/bt_make_correction"
            style="@style/Theme.Student.Button.Gradient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.21"
            android:text="@string/label_bt_make_correction"
            android:textAllCaps="false" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.13" />

    </LinearLayout>

</LinearLayout>