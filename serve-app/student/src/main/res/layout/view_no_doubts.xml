<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_no_doubts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet_curved"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center|center_horizontal"
            android:layout_weight="0.624"
            android:src="@drawable/ic_bunny_no_doubts" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.182" />

        <TextView
            style="@style/Theme.Text.SecondaryColor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_30dp"
            android:layout_marginEnd="@dimen/margin_30dp"
            android:layout_weight="0.193"
            android:gravity="center"
            android:src="@drawable/ic_bunny_no_doubts"
            android:text="@string/label_no_doubts"
            android:textAppearance="@style/TextAppearance.Body1"
            android:textColor="@color/otp_label_color"
            android:textSize="@dimen/text_size_large" />

    </LinearLayout>

</RelativeLayout>