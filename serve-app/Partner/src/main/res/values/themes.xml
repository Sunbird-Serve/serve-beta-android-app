<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EVidyalokaPartner" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorAccent">@color/buttoncolor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <item name="colorOnSurface">@color/buttoncolor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:buttonStyle">@style/Theme.Button.OnSurface.PrimaryColor</item>
        <item name="android:editTextStyle">@style/Theme.EditText.OnSurface.SecondaryColor</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
        <item name="android:listDivider">@color/viewSeparatorColor</item>
        <item name="fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="Theme.EVidyalokaPartner.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSurface">@color/buttoncolor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/Theme.Button.OnSurface.PrimaryColor</item>
        <item name="android:editTextStyle">@style/Theme.EditText.OnSurface.SecondaryColor</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense</item>
        <item name="android:listDivider">@color/viewSeparatorColor</item>
    </style>

    <style name="Theme.EVidyalokaPartner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
        <item name="navigationIcon">@drawable/ic_nav_menu</item>
    </style>

    <style name="Theme.EVidyalokaPartner.ActionBar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="elevation">0dp</item>
        <item name="navigationIcon">@drawable/ic_nav_menu</item>
        <item name="android:navigationIcon">@drawable/ic_nav_menu</item>
        <item name="android:height">@dimen/size_25dp</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_16dp</item>
    </style>

    <style name="Theme.EVidyalokaPartner.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/colorOnSecondary</item>
    </style>

    <style name="TitleToolBarTextApperance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">@dimen/size_16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.EditText.OnSurface.SecondaryColor.Disabled" parent="Theme.EditText.OnSurface.SecondaryColor">
        <item name="android:enabled">false</item>
        <item name="android:background">@drawable/edittext_rounded_onsecondary_disabled</item>
        <item name="android:paddingBottom">18dip</item>
    </style>



    <style name="Theme.RoleToggleRadioButton" parent="RoleToggleRadioButton">
        <item name="android:textColor">@drawable/selector_segment_button</item>
    </style>

