    <style name="Theme.EVidyalokaPartner.NoActionBar.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TabTextApperance</item>
        <item name="tabSelectedTextColor">@color/buttoncolor</item>
        <item name="tabIndicatorColor">@color/buttoncolor</item>
        <item name="tabTextColor">@color/colorOnSecondary_30opc</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="TabTextApperance" parent="Widget.MaterialComponents.TabLayout">
        <item name="fontFamily">@font/poppins_semi_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FabTheme" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_marginEnd">@dimen/size_20dp</item>
        <item name="android:layout_marginBottom">@dimen/size_26dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/white</item>
        <item name="android:backgroundTint">@color/buttoncolor</item>
        <item name="backgroundTint">@color/buttoncolor</item>
        <item name="elevation">@dimen/size_5dp</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>


