<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false" android:state_checked="true" android:color="@color/colorOnSecondary">
        <shape android:shape="rectangle"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <corners
                android:radius="100dp" />
            <solid
                android:color="@color/radio_button_selected_color" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_checked="false" android:color="#66959DDD">
        <shape android:shape="rectangle"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <corners
                android:radius="100dp" />
            <solid
                android:color="@color/radio_button_unselected_color" />
        </shape>
    </item>
</selector>