<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/size_20dp"
    tools:context=".ui.course.CourseDetailsFragment">

    <ImageView
        android:id="@+id/iv_course"
        android:layout_width="@dimen/size_120dp"
        android:layout_height="@dimen/size_120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:src="@drawable/ic_maths"
        android:padding="@dimen/size_35dp"
        android:elevation="@dimen/size_5dp"
        android:background="@drawable/ic_oval"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_60dp"
        android:background="@drawable/top_right_round_corner_sedondary"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_30dp"
        android:paddingTop="@dimen/padding_30dp"
        android:paddingEnd="@dimen/padding_30dp"
        android:weightSum="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_course_title"
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:gravity="center"
                    android:textColor="@color/colorOnSecondary"
                    android:textSize="@dimen/size_16sp" />

                <TextView
                    android:id="@+id/tv_course_grade"
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:gravity="center"
                    android:textColor="@color/colorOnSecondary_60opc"
                    android:textSize="@dimen/size_13sp" />

            </LinearLayout>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/size_25dp"
                android:layout_marginBottom="@dimen/size_25dp"
                android:layout_weight=".01"
                android:background="?android:attr/listDivider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:text="@string/course_provider"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <TextView
                    android:id="@+id/tv_course_provider"
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:textColor="@color/colorOnSecondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_18dp"
                android:orientation="vertical">

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:text="@string/academic_year"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <TextView
                    android:id="@+id/tv_academic_year"
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:textColor="@color/colorOnSecondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_18dp">

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:text="@string/start_date"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <TextView
                    android:id="@+id/tv_start_date"
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:textColor="@color/colorOnSecondary" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_18dp">

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:text="@string/end_date"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <TextView
                    android:id="@+id/tv_end_date"
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight=".01"
                    android:textColor="@color/colorOnSecondary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>