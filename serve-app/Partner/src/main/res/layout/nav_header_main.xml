<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:segmentedgroup="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg_main"
    android:fitsSystemWindows="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding_30dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_23dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_toolbar_profile"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/padding_14dp">

            <TextView
                android:id="@+id/tv_toolbar_name"
                style="@style/Theme.LabelText.OnSurface.PrimaryColor.Bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/tv_toolbar_email"
                style="@style/Theme.LabelText.OnSurface.PrimaryColor.Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/colorOnPrimary_60opc" />
        </LinearLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/rb_group_partner_"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginStart="@dimen/margin_30dp"
        android:layout_marginTop="@dimen/margin_13dp"
        android:layout_marginEnd="@dimen/margin_26dp"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:background="@drawable/radio_unchecked"
        android:checkedButton="@id/rb_partner"
        android:orientation="horizontal"
        android:visibility="gone">


        <RadioButton
            android:id="@+id/rb_partner"
            style="@style/Theme.RoleToggleRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_segment_button"
            android:text="@string/partner" />

        <RadioButton
            android:id="@+id/rb_dsm"
            style="@style/Theme.RoleToggleRadioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_segment_button"
            android:text="@string/dsm" />


    </RadioGroup>


</LinearLayout>