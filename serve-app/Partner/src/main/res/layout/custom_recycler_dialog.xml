<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/size_300dp"
    style="@style/MaterialAlertDialogTheme"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:layout_marginLeft="@dimen/size_20dp"
    android:layout_marginTop="@dimen/size_114dp"
    android:layout_marginRight="@dimen/size_20dp"
    android:elevation="@dimen/size_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_26dp"
            android:background="@drawable/ic_oval"
            android:padding="15dp"
            android:src="@drawable/ic_add_school"
            app:tint="@color/colorPrimary" />

        <TextView
            style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_25dp"
            android:text="@string/label_assigned_digital_schools"
            android:textSize="@dimen/size_16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_assigned_schools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_25dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/lyClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:gravity="center"
                android:text="@string/label_close"
                android:textColor="@color/buttoncolor" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>