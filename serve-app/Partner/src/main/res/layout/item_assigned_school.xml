<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/size_40dp"
    android:paddingRight="@dimen/size_40dp"
    android:paddingTop="@dimen/size_17dp"
    android:paddingBottom="@dimen/size_16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_profile_pic"
            android:layout_width="@dimen/size_50dp"
            android:layout_height="@dimen/size_50dp"
            android:src="@drawable/ic_school_logo_placeholder"/>

        <TextView
            android:layout_toRightOf="@+id/iv_profile_pic"
            android:id="@+id/tv_school_name"
            android:layout_centerInParent="true"
            style="@style/Theme.LabelText.OnSurface.SecondaryColor"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAppearance="@style/TextAppearance.Subtitle2"
            android:maxLines="2"
            android:text="MSBK Gurukulam Digital School" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>