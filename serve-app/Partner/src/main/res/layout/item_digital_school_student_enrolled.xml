<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_120dp"
    android:layout_height="@dimen/size_74dp"
    android:layout_marginRight="@dimen/size_74dp"
    android:background="@drawable/rounded_gray_background"
    android:clickable="true"
    android:padding="@dimen/size_10dp">

    <TextView
        android:id="@+id/tv_students_details"
        style="@style/Theme.LabelText.OnSurface.SecondaryColor.Bold"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp"
        android:textSize="@dimen/size_18sp"
        tools:text="@tools:sample/us_zipcodes" />

    <TextView
        style="@style/Theme.LabelText.OnSurface.SecondaryColor.Bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_students_details"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/card_view_landing_students_enrolled"
        android:textSize="@dimen/size_11sp" />

</RelativeLayout>