<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MaterialAlertDialogTheme"
    android:layout_width="@dimen/size_300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:layout_marginLeft="@dimen/size_20dp"
    android:layout_marginTop="@dimen/size_114dp"
    android:layout_marginRight="@dimen/size_20dp"
    android:background="@drawable/bg_dialog_rounded_corner"
    android:elevation="@dimen/size_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_26dp"
            android:background="@drawable/ic_network_issue"
            android:padding="15dp"
            android:src="@drawable/ic_check" />

        <TextView
            android:id="@+id/dlg_title"
            style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_25dp"
            android:text="@string/no_internet_connection"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_16dp" />

        <TextView
            android:id="@+id/dlg_message"
            style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/size_30dp"
            android:layout_marginTop="@dimen/size_3dp"
            android:layout_marginRight="@dimen/size_30dp"
            android:layout_marginBottom="@dimen/size_36dp"
            android:gravity="center"
            android:text="@string/you_do_not_have_an_active_internet_connection_please_check_your_internet_connection_and_retry"
            android:textColor="@color/colorOnSecondary_60opc" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>