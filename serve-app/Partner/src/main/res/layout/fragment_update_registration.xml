<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/thankyou_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_40dp"
                android:layout_marginEnd="@dimen/margin_40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView23"
                    style="@style/Theme.LabelText.OnSurface.PrimaryColor.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Thank you for joining us!"
                    android:textAppearance="@style/TextAppearance.Headline6" />

                <TextView
                    android:id="@+id/textView25"
                    style="@style/Theme.LabelText.OnSurface.PrimaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="We would like to know more about you."
                    android:textAppearance="@style/TextAppearance.Subtitle2" />
            </LinearLayout>

            <org.evidyaloka.common.view.SliderIndicator
                android:id="@+id/ll_track_steps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_20dp" />

            <LinearLayout
                android:id="@+id/view_org_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_right_round_corner_white"
                android:orientation="vertical"
                android:padding="@dimen/size_20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/organizationn_details_full_name"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/etv_name"
                        style="@style/Theme.EditText.OnSurface.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/organization_name"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_org_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/etv_org_name"
                        style="@style/Theme.EditText.OnSurface.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:editable="true"
                        android:ems="10"
                        android:enabled="true"
                        android:inputType="textPersonName|textCapWords"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/organization_email"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_org_email"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/etv_org_email"
                        style="@style/Theme.EditText.OnSurface.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textEmailAddress"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/organization_phone"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_org_phone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/etv_org_phone"
                        style="@style/Theme.EditText.OnSurface.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/organization_address"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_org_address_1"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/etv_org_address_1"
                        style="@style/Theme.EditText.OnSurface.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:ems="10"
                        android:inputType="textMultiLine|textPostalAddress"
                        android:padding="10dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/bt_next"
                    style="@style/Theme.Button.OnSurface.PrimaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginBottom="@dimen/margin_16dp"
                    android:text="@string/next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/view_person_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_right_round_corner_white"
                android:orientation="vertical"
                android:padding="@dimen/margin_16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible">

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:layout_marginEnd="@dimen/margin_30dp"
                    android:text="A user will be created based on the below details and assigned as default Partner Admin"
                    android:textAlignment="center" />

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:text="@string/fname"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_person_name"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/etv_person_name"
                        style="@style/Theme.EditText.OnSurface.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lname"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_person_lname"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/etv_person_lname"
                        style="@style/Theme.EditText.OnSurface.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/person_s_email"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_person_mail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/etv_person_mail"
                        style="@style/Theme.EditText.OnSurface.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="textEmailAddress"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/person_s_contact_number"
                    android:textColor="@color/colorOnSecondary_60opc" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_person_phone"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <EditText
                        android:id="@+id/etv_person_phone"
                        style="@style/Theme.EditText.OnSurface.SecondaryColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="phone"
                        android:padding="10dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20dp"
                    android:layout_marginBottom="@dimen/margin_20dp"
                    android:gravity="top|center"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_accept_tnc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:paddingRight="@dimen/size_5dp"
                        app:buttonTint="@color/buttoncolor" />

                    <TextView
                        android:id="@+id/tv_terms_conditions"
                        style="@style/Theme.LabelText.OnSurface.SecondaryColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="0dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="@string/terms_policy"
                        android:textSize="@dimen/size_12sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/bt_register"
                    style="@style/Theme.Button.OnSurface.PrimaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/label_register" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>