<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MaterialAlertDialogTheme"
    android:layout_width="@dimen/size_300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    android:layout_marginLeft="@dimen/size_20dp"
    android:layout_marginTop="@dimen/size_114dp"
    android:layout_marginRight="@dimen/size_20dp"
    android:background="@drawable/bg_dialog_rounded_corner"
    android:elevation="@dimen/size_5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_26dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/ic_oval"
            android:padding="15dp"
            android:src="@drawable/ic_school_logo_placeholder" />

        <TextView
            android:id="@+id/dlg_title"
            style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/size_25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="@dimen/size_14sp" />


        <Button
            android:id="@+id/bt_ok"
            style="@style/Theme.Button.OnSurface.PrimaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:elevation="12dp"
            android:text="@string/ok"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>