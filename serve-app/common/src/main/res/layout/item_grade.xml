<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SelectableItemBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/size_10dp"
    android:layout_marginTop="@dimen/margin_10dp"
    android:layout_marginBottom="@dimen/margin_10dp"
    android:elevation="@dimen/size_1dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/size_15dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:id="@+id/linearLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/selector_grade"
        android:gravity="center"
        android:minWidth="140dp"
        android:minHeight="80dp"
        android:orientation="horizontal"
        android:padding="15dp">

        <RadioButton
            android:id="@+id/rb_grade"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginEnd="6dp"
            android:background="@drawable/selector_blue_tick"
            android:button="@null"
            android:checked="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_grade"
            style="@style/Theme.Text.SecondaryColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineHeight="@dimen/size_18dp"
            android:maxLines="1"
            android:text="Grade 1"
            android:textAppearance="@style/TextAppearance.Title.Large"
            android:textColor="#43536B" />

    </LinearLayout>


</androidx.cardview.widget.CardView>
