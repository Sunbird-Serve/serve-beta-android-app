<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <org.evidyaloka.common.ui.boardgradefilter.BoardGradeView
                android:id="@+id/board_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </org.evidyaloka.common.ui.boardgradefilter.BoardGradeView>

            <org.evidyaloka.common.ui.digitalschool.DigitalSchoolView
                android:id="@+id/digital_school"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorOnPrimary"
                android:orientation="vertical">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E3E3E3" />

                <TextView
                    android:id="@+id/tv_join_text"
                    style="@style/Theme.LabelText.OnSurface.SecondaryColor.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="@dimen/margin_30dp"
                    android:layout_marginEnd="48dp"
                    android:gravity="center"
                    android:text="@string/be_a_part_of_us_and_run_your_own_digital_school_here"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <Button
                    android:id="@+id/bt_join"
                    style="@style/Theme.Button.OnSurface.PrimaryColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_30dp"
                    android:layout_marginTop="@dimen/margin_23dp"
                    android:layout_marginEnd="@dimen/margin_30dp"
                    android:layout_marginBottom="@dimen/margin_20dp"
                    android:text="@string/join"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>