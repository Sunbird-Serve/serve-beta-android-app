<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#1C286C" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/size_1dp"
        android:left="@dimen/size_1dp"
        android:right="@dimen/size_1dp"
        android:top="@dimen/size_1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="15dp" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item
        android:width="@dimen/size_24dp"
        android:height="@dimen/size_24dp"
        android:drawable="@drawable/ic_done_blue"
        android:gravity="top|right"
        android:right="@dimen/padding_10dp"
        android:top="@dimen/padding_10dp">

    </item>
</layer-list>