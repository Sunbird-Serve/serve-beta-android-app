<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/step1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_logo_pt_book" />

    <ImageView
        android:id="@+id/step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/step1"
        app:layout_constraintEnd_toEndOf="@+id/step1"
        app:layout_constraintStart_toStartOf="@+id/step1"
        app:layout_constraintTop_toTopOf="@+id/step1"
        app:srcCompat="@drawable/ic_logo_pt_e" />

    <ImageView
        android:id="@+id/step3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:alpha="0"
        app:layout_constraintBottom_toTopOf="@+id/step1"
        app:layout_constraintEnd_toEndOf="@+id/step1"
        app:layout_constraintStart_toStartOf="@+id/step1"
        app:srcCompat="@drawable/ic_logo_pt_st_1" />

    <ImageView
        android:id="@+id/step4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/step1"
        app:layout_constraintStart_toEndOf="@+id/step3"
        app:layout_constraintTop_toTopOf="@+id/step3"
        app:layout_constraintVertical_bias="0.549"
        app:srcCompat="@drawable/ic_logo_pt_st_2" />

    <ImageView
        android:id="@+id/step5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/step6"
        app:layout_constraintEnd_toEndOf="@+id/step4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step6"
        app:layout_constraintTop_toTopOf="@+id/step1"
        app:srcCompat="@drawable/ic_logo_pt_st_3" />

    <ImageView
        android:id="@+id/step6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="@+id/step1"
        app:layout_constraintStart_toStartOf="@+id/step1"
        app:layout_constraintTop_toBottomOf="@+id/step1"
        app:srcCompat="@drawable/ic_logo_pt_st_4" />

    <ImageView
        android:id="@+id/step7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/step6"
        app:layout_constraintEnd_toStartOf="@+id/step6"
        app:layout_constraintTop_toTopOf="@+id/step1"
        app:layout_constraintVertical_bias="0.566"
        app:srcCompat="@drawable/ic_logo_pt_st_5" />

    <ImageView
        android:id="@+id/step8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        app:layout_constraintBottom_toBottomOf="@+id/step1"
        app:layout_constraintEnd_toStartOf="@+id/step3"
        app:layout_constraintTop_toTopOf="@+id/step3"
        app:layout_constraintVertical_bias="0.474"
        app:srcCompat="@drawable/ic_logo_pt_st_6" />

    <ImageView
        android:id="@+id/step9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step6"
        app:srcCompat="@drawable/ic_logo_pt_title" />
</androidx.constraintlayout.widget.ConstraintLayout>